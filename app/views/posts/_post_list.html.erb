<div class="p-10 grid grid-cols-1 sm:grid-cols-1 md:grid-cols-1 lg:grid-cols-1 xl:grid-cols-3 gap-5 grid grid-cols-1 sm:grid-cols-1 md:grid-cols-1 lg:grid-cols-1 xl:grid-cols-3 gap-5">  
    <!--Card 1-->
    <%posts.each do |post|%>
      <!-- <div class="grid grid-flow-col"> -->
		    <div class="max-w-sm rounded overflow-hidden shadow-lg">
		      <img class="w-full" src="<%=post.image.present? ? post.image : '/assets/no_image.png'%>" alt="Mountain">
		      <div class="px-6 py-4">
		        <div class="font-bold text-xl mb-2"><%=post.title%></div>
		        <p class="text-gray-700 text-base">
		          <%=post.description%>
		        </p>
		      </div>
		      <div class="px-6 pt-4 pb-2">
		        <%if @current_user.id == post.user_id%>
			        <a href="<%=edit_post_path(post.id)%>" class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2" data-turbo-frame="all_post">Edit</a>
			        
			        <a href="#" class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2" data-id = "<%=post.id%>" data-turbo-frame="all_post" data-controller="post" data-action = "click->post#delete">Remove</a>
			      <%end%>  

		      </div>
		    </div>
		  <!-- </div>   -->
	  <%end%>  
  </div>