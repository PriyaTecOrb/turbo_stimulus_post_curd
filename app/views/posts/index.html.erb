<%= turbo_frame_tag "all_post" , turbo_visit_control: "reload" do %>
  <%= turbo_frame_tag "new_post" do %>
    
    <a href="<%=logout_path()%>" data-turbo = false  class="float-right ml-2 bg-orange-400 hover:bg-blue-600 text-white text-sm font-bold rounded px-2 py-1 mt-3 mb-20">Logout</a>

    <%if params[:user_id].present?%>
        <a href="<%=posts_path()%>" data-turbo-frame="all_post" class="float-right ml-2 bg-red-400 hover:bg-blue-600 text-white text-sm font-bold rounded px-2 py-1 mt-3 mb-20">All Posts</a>
    <%else%>
      <a href="<%=posts_path(user_id:@current_user.id)%>" data-turbo-frame="all_post" class="float-right ml-2 bg-green-400 hover:bg-blue-600 text-white text-sm font-bold rounded px-2 py-1 mt-3 mb-20">Your Posts</a>
    <%end%>    

    <a href="<%=new_post_path()%>" data-turbo-frame="new_post" class="float-right ml-2 bg-blue-400 hover:bg-blue-600 text-white text-sm font-bold rounded px-2 py-1 mt-3 mb-20">Add Post</a>
  <%end%>    
  <%= render "post_list",:posts=>@posts%>
<%end%>